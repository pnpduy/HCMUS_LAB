@model ProjectWeek02.Areas.Main.Models.SignUp
<ul class="tab-group">
    <li class="tab active"><a href="/Home/Index">Sign Up</a></li>
    <li class="tab"><a href="/Login/Index">Log In</a></li>
</ul>

    <div id="signup">
        <h1>Sign Up for Free</h1>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
            <div class="top-row">
                <div class="field-wrap">
                    @Html.TextBoxFor(m => m.FirstName, new { placeholder = "FirstName" })
                </div>

                <div class="field-wrap">
                    @Html.TextBoxFor(m => m.LastName, new { placeholder = "LastName" })
                </div>
            </div>

            <div class="field-wrap">
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email Address" })
            </div>

            <div class="field-wrap">
                @Html.TextBoxFor(m => m.Password, new { placeholder = "Set A Password" })
            </div>

            <button type="submit" class="button button-block">Get Started</button>
        }
        </div>




