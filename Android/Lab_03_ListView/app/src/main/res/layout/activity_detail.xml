<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:padding="10dp">

    <TextView
        android:id="@+id/food_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/name"
        android:textColor="#FFCA0D"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/imgFood_detail"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/food_detail"
        android:layout_marginTop="10dp"
        android:src="@drawable/coca_cola"/>

    <TextView
        android:id="@+id/price_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price"
        android:textColor="#11F036"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imgFood_detail"
        android:layout_marginTop="20dp"/>

</RelativeLayout>